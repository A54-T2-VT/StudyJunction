@using StudyJunction.Core.ResponseDTOs;
@model ICollection<CourseResponseDTO>

@{
	ViewData["Title"] = "List of courses";
}

<div class = "row">
	<div class ="col-md-8 offset-md-2">
		<table>
             <tbody>
                @for (int i = 0; i < Model.Count; i+=3)
                {
                    <tr>
                        @for (int j = i; j < i + 3; j++)
                        {
                            @if(j >= Model.Count)
                            {
                                break;
                            }
                            <td>@(Model.ElementAtOrDefault(j).Title ?? "")</td>
                        }
                    </tr>
                }
            </tbody>
		</table>
	</div>
</div>
