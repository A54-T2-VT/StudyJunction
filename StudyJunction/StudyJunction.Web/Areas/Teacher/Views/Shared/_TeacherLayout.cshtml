<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">
            <img src="~/assets/img/aerondight___green-themed_logo_with_asphalt_roads_crossing_eac_012d7662-32da-4083-92bc-e4686cb979d8.png" width="100px" height="100px" class="img-fluid" alt="Logo" />
            <h1 class="logo me-auto"><a>StudyJunction</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="active" href="http://localhost:5205/Home/Index">Home</a></li>
                    <li><a asp-controller="Courses" asp-action="Index" asp-area="Teacher">Courses</a></li>
                    <li><a href="about.html">About</a></li>
                    <li><a asp-controller="Courses" asp-action="Create" asp-area="Teacher">Create Course</a></li>

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            @if (SignInManager.IsSignedIn(User))
            {
                var loggedUser = UserManager.Users.FirstOrDefault(u => u.UserName == User.Identity.Name);


                <div class="profile-dropdown">
                    <div onclick="toggle()" class="profile-dropdown-btn">
                        <div class="profile-img" style="background-image: url(@loggedUser.ProfileImageCloudinaryUri)">
                            <i class="bi bi-circle-fill"></i>
                        </div>

                        <span>
                            @loggedUser.UserName
                            <i class="fa-solid fa-angle-down"></i>
                        </span>
                    </div>

                    <ul class="profile-dropdown-list2">
                        <li class="profile-dropdown-list-item2">
                            <a href="#">
                                <i class="bi bi-person"></i>
                                Profile
                            </a>
                        </li>

                        <li class="profile-dropdown-list-item2">
                            <a asp-controller="Courses" asp-action="MyCourses" asp-area="Teacher">
                                <i class="bi bi-card-list"></i>
                                My Courses
                            </a>
                        </li>
                        <li class="profile-dropdown-list-item2">
                            <a asp-area="Teacher" asp-controller="Courses" asp-action="GetCoursesCreatedByUser">
                                <i class="bi bi-card-list"></i>
                                Courses Created By Me
                            </a>
                        </li>
                        <li class="profile-dropdown-list-item2">
                            <a href="#">
                                <i class="bi bi-gear-wide"></i>
                                Settings
                            </a>
                        </li>

                        <hr />

                        <li class="profile-dropdown-list-item2">
                            <a asp-area="" asp-controller="Users" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>

                <script>
                    let profileDropdownList = document.querySelector(".profile-dropdown-list2");
                    let btn = document.querySelector(".profile-dropdown-btn");

                    let classList = profileDropdownList.classList;

                    const toggle = () => classList.toggle("active");

                    window.addEventListener("click", function (e) {
                        if (!btn.contains(e.target)) classList.remove("active");
                    });
                </script>
            }
            else
            {
                <a class="get-started-btn" asp-controller="Users" asp-action="Register">Register</a>

                <a class="get-started-btn" asp-controller="Users" asp-action="Login">Login</a>
            }
        </div>
    </header><!-- End Header -->
    <div style="margin-top: 150px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
